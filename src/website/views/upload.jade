html
  head
    meta(charset='utf-8')
    title NUS MarketPlace
    link(rel='stylesheet', href='http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.css')
    link(rel='stylesheet', type='text/css', href='http://dev.jtsage.com/cdn/simpledialog/latest/jquery.mobile.simpledialog.min.css')
    script(src='http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.js')
    script(src='http://code.jquery.com/jquery-1.8.2.min.js')
    meta(name='viewport', content='width=device-width, initial-scale=1')
  body
  #sell(data-role='page')
      div(data-role='header', data-theme='b')
        a(data-role='button', data-inline='true', href='https://ec2-50-112-50-187.us-west-2.compute.amazonaws.com/#home', data-icon='arrow-l', data-iconpos='left', data-theme='a')
          | Back
        h1 NUS MarketPlace
      div(data-role='content')
       form(method='post', enctype='multipart/form-data', data-ajax='false', action='/api/1.0/buzz/item/create')
        div.itemName(data-role='fieldcontain')
          input.name(name='name', placeholder='Item Name', value='', data-mini='true', type='text')
        div.detail(data-role='fieldcontain')
          input.detail(name='detail', placeholder='Detail', value='', data-mini='true', type='text')
        div.category(data-role='fieldcontain')
          select#selectmenu1(name='category')
            option(disabled='disabled')
            option(value='Category', disabled='disabled', selected='true')
              | Choose a category
            option(value='Car')
              | Car
        div.tags(data-role='fieldcontain')
          input.tags(name='tags', placeholder='Tags', value='', data-mini='true', type='text')
        div.minBid(data-role='fieldcontain')
          input.minBid(name='Minimum Bid', placeholder='Minimum Bid (eg. 5$)', value='', data-mini='true', type='text')
        div.condition(data-role='fieldcontain')
          input.condition(name='Condition', placeholder='Condition (eg. 8/10)', value='', data-mini='true', type='text')
        div.file(data-role='fieldcontain')
          span Upload Image
          input.file(type='file', name='file')
        div(data-role='navbar', data-iconpos='top')
          input.sell(data-role='button', type='submit', value='Sell', data-transition='fade', data-icon='', data-theme='a')
      div(data-role='footer', data-theme='b')
